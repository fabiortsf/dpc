@{
    ViewBag.Title = "Consulta Estoque";
    Layout = "~/Views/Shared/_App.cshtml";
}

<!-- Page header -->
<div class="page-header">
    <div class="page-title">
        <h3>Consulta Estoque <small>Consulte seu estoque</small></h3>
    </div>
</div>
<!-- /page header -->

<div class="breadcrumb-line">
    <ul class="breadcrumb">
        <li>@Html.ActionLink("Home", "index", "app")</li>
    </ul>

    <div class="visible-xs breadcrumb-toggle">
        <a class="btn btn-link btn-lg btn-icon" data-toggle="collapse" data-target=".breadcrumb-buttons"><i class="icon-menu2"></i></a>
    </div>

    <ul class="breadcrumb-buttons collapse"></ul>
</div>


<div class="block">

    <h6 class="heading-hr"><span data-icon="&#xe264;"></span>&nbsp;Consulta Estoque</h6>
    <form id="frmConsulta" name="frmConsulta" class="form-horizontal" role="form">

        <div class="row" style="padding-top:2%;">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="txtNome" class="col-md-4 control-label">Código de Barras</label>
                    <div class="col-md-8">
                        <input class="form-control input-sm" id="txtCodigoDeBarras" name="txtCodigoDeBarras" placeholder="Código de Barras" type="text" maxlength="25"
                               required data-toggle="tooltip"
                               data-rule-required="true" data-msg-required="Informe o código de barras"
                               data-rule-minlength="1" data-msg-minlength="Informe ao menos 1 caracter">
                    </div>
                </div>
            </div>
        </div>

        <div class="datatable-invoices" style="padding-bottom:10px;">
            <button id="btnPesquisa" class="btn btn-sm btn-info" type="submit" title="Pesquisar Registros">
                <i class="icon-search3"></i>Pesquisar
            </button>
        </div>

        <div class="datatable-invoices" id="divRegistros">
            <span id="tituloConsulta"></span>
            <table id="tbRegistros" class="table table-condensed table-striped table-bordered highlight">
                <thead>
                    <tr>
                        <th>Código de Barras</th>
                        <th>Descrição</th>
                        <th>Tipo</th>
                        <th>Preço</th>
                        <th>Quantidade</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
            </table>
        </div>

    </form>
</div>





