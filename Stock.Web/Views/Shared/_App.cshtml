<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stock WEB</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../css/londinium-theme.css" rel="stylesheet" type="text/css">
    <link href="../css/styles.css" rel="stylesheet" type="text/css">
    <link href="../css/icons.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&amp;subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">

</head>
<body class="full-width">


    <!-- Navbar -->
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-icons">
                <span class="sr-only">Toggle right icons</span>
                <i class="icon-grid"></i>
            </button>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                <span class="sr-only">Toggle menu</span>
                <i class="icon-paragraph-justify2"></i>
            </button>
            <a class="navbar-brand" href="@Url.Action("index", "app")" style="padding-top:6px;"><img src="@Url.Content("~/content/images/logo.png")" alt="Cobrarweb" height="40"></a>
        </div>

        <ul class="nav navbar-nav collapse" id="navbar-menu">
            <li><a href="#"><i class="icon-home4"></i> <span>Home</span></a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-box-add"></i> <span>Produto</span> <b class="caret"></b></a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        @Html.ActionLink("Cadastro", "produtoCadastro", "app", null, new { title = "Cadastro de Produto" })
                    </li>
                    <li>
                        @Html.ActionLink("Consultar Estoque", "consultaEstoque", "app", null, new { title = "Consultar Estoque" })
                    </li>
                    <li>
                        @Html.ActionLink("Declarar Perda", "declararPerda", "app", null, new { title = "Declarar Perda" })
                    </li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-file"></i> <span>Venda</span> <b class="caret"></b></a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>@Html.ActionLink("Pedido", "vendaPedido", "app", null, new { title = "Pedido" })</li>
                    <li>@Html.ActionLink("Vendas Realizadas", "vendaRealizadas", "app", null, new { title = "Vendas Realizadas" })</li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-copy"></i> <span>Relatórios</span>  <b class="caret"></b></a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>@Html.ActionLink("Itens vendidos", "relatorioItensVendidos", "app", null, new { title = "Itens vendidos" })</li>
                    <li>@Html.ActionLink("Itens perdidos", "relatorioItensPerdidos", "app", null, new { title = "Itens perdidos" })</li>
                </ul>
            </li>
        </ul>

        <ul class="nav navbar-nav navbar-right collapse" id="navbar-icons">
            <li class="user dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    <img src="images/demo/users/face1.png" alt="">
                    <span>Eugene Kopyov</span>
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right icons-right">
                    <li><a href="#"><i class="icon-user"></i> Profile</a></li>
                    <li><a href="#"><i class="icon-bubble4"></i> Messages</a></li>
                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                    <li><a href="#"><i class="icon-exit"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <!-- /navbar -->
    <!-- Page container -->
    <div class="page-container">


        <!-- Page content -->
        <div class="page-content">

            @RenderBody()

            <!-- Footer -->
            <div class="footer clearfix">
                <div class="pull-left">&copy; @DateTime.Now.Year. ACME INC</div>
            </div>
            <!-- /footer -->


        </div>
        <!-- /page content -->


    </div>
    <!-- /page container -->

    <script type="text/javascript" src="../js/jquery-2.1.1.js"></script>

    <script type="text/javascript" src="../js/jquery-ui-1.10.4.min.js"></script>

    <script type="text/javascript" src="../js/bootstrap.min.js"></script>

    <script type="text/javascript" src="../js/jquery.validate.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
